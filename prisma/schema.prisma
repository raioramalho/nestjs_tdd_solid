// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  CODUSU Int @id @default(autoincrement())
  EMAIL String @unique
  SENHA String
  LOGADO Boolean  

  INCLUSAO DateTime @default(now())
  ALTERACAO DateTime @updatedAt

  @@map("USUARIO")
}

model Pessoa {
  CODPES Int @id @default(autoincrement())
  NOME String
  SOBRENOME String
  CPF String @unique
  TELEFONE String

  ENDERECO Endereco @relation(fields: [CODEND], references: [CODEND])
  CODEND Int @unique

  INCLUSAO DateTime @default(now())
  ALTERACAO DateTime @updatedAt

  @@map("PESSOA")
}

model Endereco {
  CODEND Int @id @default(autoincrement())
  CEP String
  ENDERECO String
  NUMERO Int
  BAIRO String
  UF String
  ESTADO String
  COMPLEMENTO String

  PESSOA Pessoa[]

  INCLUSAO DateTime @default(now())
  ALTERACAO DateTime @updatedAt

  @@map("ENDERECO")
}